{
  "ReverseProxy": {
    "Routes": {
      "auth": {
        "ClusterId": "auth",
        "Match": { "Path": "/auth/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/auth" } ]
      },
      "employees": {
        "ClusterId": "employees",
        "Match": { "Path": "/employees/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/employees" } ]
      },
      "documents": {
        "ClusterId": "documents",
        "Match": { "Path": "/documents/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/documents" } ]
      },
      "claims": {
        "ClusterId": "claims",
        "Match": { "Path": "/claims/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/claims" } ]
      }
    },
    "Clusters": {
      "auth": { "Destinations": { "d1": { "Address": "http://authservice:8080" } } },
      "employees": { "Destinations": { "d1": { "Address": "http://employeeservice:8080" } } },
      "documents": { "Destinations": { "d1": { "Address": "http://documentservice:8080" } } },
      "claims": { "Destinations": { "d1": { "Address": "http://claimservice:8080" } } }
    }
  }
}
